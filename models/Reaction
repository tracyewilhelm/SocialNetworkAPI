const { Schema, model } = require("mongoose");

//create the base model for a reaction
const reactionSchema = new Schema(
  {
    reactionId: {
      type: Schema.Types.ObjectId,
      default: new ObjectId(),
    },
    reactionBody: {
      type: String,
      required: true,
      maxLength: 200,
    },
    username: {
      type: String,
      required: true,
    },
    createdAt: {
      date: Date,
      default: Date.now,
    },
  },
  {
    toJSON: {
      getters: true,
    },
    id: false,
  }
);

module.exports = reactionSchema;
